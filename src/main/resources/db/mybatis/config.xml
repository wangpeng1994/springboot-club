        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>
    <typeAliases>
        <typeAlias alias="Blog" type="blog.entity.Blog"/>
        <typeAlias alias="User" type="blog.entity.User"/>
    </typeAliases>
    <mappers>
        <mapper resource="db/mybatis/mappers/BlogMapper.xml"/>
    </mappers>
</configuration>
